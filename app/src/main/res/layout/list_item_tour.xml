<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ImageView
      android:id="@+id/tour_list_thumbnail"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_marginBottom="6dp"
      android:layout_marginStart="4dp"
      android:layout_marginTop="6dp"
      android:contentDescription="@string/thumbnail"
      android:scaleType="centerInside"
      tools:src="@mipmap/ic_launcher" />

  <TextView
      android:id="@+id/tour_list_detail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="2dp"
      android:layout_marginStart="4dp"
      android:gravity="center"
      android:maxLines="2"
      android:paddingEnd="4dp"
      android:textColor="@android:color/holo_red_dark"
      android:textSize="18sp"
      tools:text="Detail" />

  <RelativeLayout
      android:id="@+id/tour_list_text_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toEndOf="@id/tour_list_thumbnail"
      android:layout_toStartOf="@id/tour_list_detail">

    <TextView
        android:id="@+id/tour_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        tools:text="Title" />

    <TextView
        android:id="@+id/tour_list_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tour_list_title"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:fontFamily="casual"
        android:maxLines="3"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        tools:text="Subtitle" />

  </RelativeLayout>
</RelativeLayout>
