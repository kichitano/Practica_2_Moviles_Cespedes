<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:gravity="center_horizontal"
    tools:context="com.raywenderlich.alltherecipes.TourDetailActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-50dp"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/LblTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="-22sp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/imageView"
        android:textSize="40sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/LblParrafo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LblTitulo"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:paddingTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LblParrafo"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtPersona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:text="TextView"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtDias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtPersona"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:text="TextView"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24sp"
            android:textStyle="italic" />

    </LinearLayout>


    <TextView
        android:id="@+id/txtPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout1"
        android:gravity="center"
        android:maxLines="1"
        android:paddingTop="13sp"
        android:text="TextView"
        android:textColor="@color/colorVegetarian"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>
